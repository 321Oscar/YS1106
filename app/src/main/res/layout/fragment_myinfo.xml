<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_d"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray_d">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_white">

            <TableRow
                android:id="@+id/change_account"
                android:background="@drawable/usertextview"
                android:clickable="true"
                android:padding="@dimen/margindp_10"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/reg_username"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/frag_myOwn_tv_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margindp_10"
                android:layout_marginRight="@dimen/margindp_10"
                android:background="@color/color_gray_d">

            </View>

            <TableRow
                android:id="@+id/change_sex"
                android:background="@drawable/usertextview"
                android:clickable="true"
                android:padding="@dimen/margindp_10"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/sex"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/frag_myOwn_tv_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="@dimen/margindp_10"
                android:layout_marginRight="@dimen/margindp_10"
                android:background="@color/color_gray_d">

            </View>

            <TableRow
                android:id="@+id/change_age"
                android:background="@drawable/usertextview"
                android:clickable="true"
                android:padding="@dimen/margindp_10"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/age"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/frag_myOwn_tv_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margindp_10"
                android:layout_marginRight="@dimen/margindp_10"
                android:background="@color/color_gray_d">

            </View>

            <TableRow
                android:id="@+id/change_name"
                android:background="@drawable/usertextview"
                android:clickable="true"
                android:padding="@dimen/margindp_10"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/name"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/frag_myOwn_tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margindp_10"
                android:layout_marginRight="@dimen/margindp_10"
                android:background="@color/color_gray_d">

            </View>

            <TableRow
                android:id="@+id/change_qq"
                android:background="@drawable/usertextview"
                android:clickable="true"
                android:padding="@dimen/margindp_10"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/q"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/frag_myOwn_tv_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margindp_10"
                android:layout_marginRight="@dimen/margindp_10"
                android:background="@color/color_gray_d">

            </View>

            <TableRow
                android:id="@+id/change_email"
                android:background="@drawable/usertextview"
                android:clickable="true"
                android:padding="@dimen/margindp_10"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/em"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/frag_myOwn_tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margindp_10"
                android:layout_marginRight="@dimen/margindp_10"
                android:background="@color/color_gray_d">

            </View>

            <TableRow
                android:id="@+id/change_ph"
                android:background="@drawable/usertextview"
                android:clickable="true"
                android:padding="@dimen/margindp_10"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/ph"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/frag_myOwn_tv_ph"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="end"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />
            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>