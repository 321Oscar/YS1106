<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ChangePassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_finish"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="#0DBDD1"
            android:padding="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="#0DBDD1"
            android:padding="10dp"
            android:text="修改密码"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textsize">

        <TableRow>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="旧密码"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_oldpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:textSize="20sp"
                android:inputType="numberPassword"/>

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="旧密码确认"
                android:maxLines="1"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_oldpass_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:textSize="20sp"
                android:inputType="numberPassword"/>

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="新密码"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_newpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:textSize="20sp"
                android:inputType="numberPassword"/>

        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="right"
                android:text="新密码确认"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_newpass_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:textSize="20sp"
                android:inputType="numberPassword"/>

        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <View android:layout_weight="1" />

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确  认"
                android:textSize="20sp" />

            <View android:layout_weight="1" />
        </TableRow>
    </TableLayout>


</LinearLayout>